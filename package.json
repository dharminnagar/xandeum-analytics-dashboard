{
  "name": "xandeum-analytics-dashboard",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . && prettier check .",
    "lint:fix": "eslint . --fix && prettier --write .",
    "prepare": "husky",
    "postinstall": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:seed": "prisma db seed",
    "snapshot:pods": "curl -X POST http://localhost:3000/api/pods/snapshot -H 'Authorization: Bearer '${SNAPSHOT_SECRET:-dev-secret}",
    "snapshot:stats": "curl -X POST http://localhost:3000/api/system/stats/snapshot -H 'Authorization: Bearer '${SNAPSHOT_SECRET:-dev-secret}",
    "snapshot:all": "npm run snapshot:pods && npm run snapshot:stats",
    "cleanup": "curl -X POST http://localhost:3000/api/cleanup -H 'Authorization: Bearer '${SNAPSHOT_SECRET:-dev-secret}"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-slot": "^1.2.4",
    "@tanstack/react-query": "^5.90.12",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.562.0",
    "next": "16.0.10",
    "next-themes": "^0.4.6",
    "pg": "^8.16.3",
    "prisma": "^7.2.0",
    "react": "19.2.1",
    "react-dom": "19.2.1",
    "recharts": "^3.6.0",
    "tailwind-merge": "^3.4.0",
    "undici": "^7.16.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/pg": "^8.16.0",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "16.0.10",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --cache --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  }
}
